<root>
    <article>
        <heading>Link</heading>
        <section>
            <link href="//yandex.ru">Simple</link>
        </section>
        <section>
            <link href="//google.ru" rel="external">External</link>
        </section>
    </article>
    <article>
        <heading>Button</heading>
        <section>
            <button>Simple</button>
        </section>
        <section>
            <button pressed="true">Pressed toggle button</button>
        </section>
        <section>
            <button disabled="true">Disabled</button>
        </section>
        <section>
            <button pressed="true" disabled="true">Pressed disabled toggle button</button>
        </section>
    </article>
    <article>
        <heading>Check box</heading>
        <section>
            <checkbox name="checkbox" value="on">Simple</checkbox>
        </section>
        <section>
            <checkbox checked="true" name="checkbox-checked" value="on">Checked</checkbox>
        </section>
        <section>
            <checkbox disabled="true" name="checkbox-disabled" value="on">Disabled</checkbox>
        </section>
        <section>
            <checkbox checked="true" disabled="true" name="checkbox-checked-disabled" value="on">Checked disabled</checkbox>
        </section>
    </article>
    <article>
        <heading>Radio group</heading>
        <section>
            <radiogroup name="radiogroup" label="Simple">
                <radio value="first">First</radio>
                <radio value="second">Second</radio>
                <radio value="third">Third</radio>
            </radiogroup>
        </section>
        <section>
            <radiogroup name="radiogroup-checked" label="Checked">
                <radio value="first">First</radio>
                <radio checked="true" value="second">Second</radio>
                <radio value="third">Third</radio>
            </radiogroup>
        </section>
        <section>
            <radiogroup disabled="true" name="radiogroup-checked-disabled" label="Disabled">
                <radio value="first">First</radio>
                <radio value="second">Second</radio>
                <radio checked="true" value="third">Third</radio>
            </radiogroup>
        </section>
    </article>
    <article>
        <heading>List box</heading>
        <section>
            <listbox name="listbox" label="Simple">
                <option value="first">First</option>
                <option value="second">Second</option>
                <option value="third">Third</option>
            </listbox>
        </section>
        <section>
            <listbox disabled="true" name="listbox" label="Disabled">
                <option value="first">First</option>
                <option checked="true" value="second">Second</option>
                <option value="third">Third</option>
            </listbox>
        </section>
    </article>
    <article>
        <heading>Text box</heading>
        <section>
            <textbox label="Simple"/>
        </section>
        <section>
            <textbox value="Text" label="Filled"/>
        </section>
        <section>
            <textbox disabled="true" value="Text" label="Disabled"/>
        </section>
    </article>
    <article>
        <heading>Mixes</heading>
        <section>
            <button view="link">Button as link</button>
        </section>
        <section>
            <link href="//yandex.ru" mix="button">Link as button</link>
        </section>
        <section>
            <checkbox name="checkbox-button" value="on" view="button">Checkbox as button</checkbox>
        </section>
        <section>
            <radiogroup name="radio-button-group" view="buttongroup" label="Disabled">
                <radio value="first">First</radio>
                <radio value="second">Second</radio>
                <radio value="third">Third</radio>
            </radiogroup>
        </section>
    </article>
</root>